<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.disguisedtoast.drawable.settingsModule.controllers.ImageSettingsViewController">
    <center>
        <GridPane hgap="20.0" vgap="20.0">
            <BorderPane.margin>
                <Insets bottom="10.0" left="40.0" right="40.0" top="20.0" />
            </BorderPane.margin>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
                    <children>
                        <TextField fx:id="filePath" minWidth="300.0" prefHeight="25.0" />
                  <Button fx:id="browseButton" mnemonicParsing="false" text="Browse" />
                    </children>
                </HBox>
                <Label text="Image source">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </GridPane>
    </center>
    <top>
        <BorderPane BorderPane.alignment="CENTER">
            <left>
                <Label styleClass="screen_message" text="Image Settings" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </left>
            <center>
                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="0.5" styleClass="light_separator" />
                    </children>
                    <BorderPane.margin>
                        <Insets left="10.0" />
                    </BorderPane.margin>
                </VBox>
            </center>
            <BorderPane.margin>
                <Insets left="10.0" />
            </BorderPane.margin>
        </BorderPane>
    </top>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</BorderPane>
