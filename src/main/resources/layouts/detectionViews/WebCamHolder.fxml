<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="ImageHolder" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.disguisedtoast.drawable.detectionModule.controllers.WebCamController">
   <bottom>
       <BorderPane BorderPane.alignment="CENTER">
           <center>
               <HBox alignment="CENTER" spacing="30.0">
                   <children>
                       <Button fx:id="back" alignment="CENTER" graphicTextGap="5.0" mnemonicParsing="false"
                               onAction="#Back" text="Back     " textFill="WHITE">
                           <font>
                               <Font name="System Bold" size="14.0"/>
                           </font>
                           <graphic>
                               <ImageView fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../../drawable/detectionDrawables/left-arrow.png"/>
                                   </image>
                               </ImageView>
                           </graphic>
                       </Button>
                       <Region HBox.hgrow="ALWAYS"/>
                       <StackPane>
                           <children>
                               <ImageView fx:id="stop_img1" fitHeight="45.0" pickOnBounds="true" preserveRatio="true"
                                          visible="false">
                                   <image>
                                       <Image url="@../../drawable/detectionDrawables/stop.png"/>
                                   </image>
                               </ImageView>
                               <ImageView fx:id="record_img" fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../../drawable/detectionDrawables/iconfinder_rec_record_media_player_2571215.png"/>
                                   </image>
                               </ImageView>
                           </children>
                       </StackPane>
                       <Region HBox.hgrow="ALWAYS"/>
                       <Button fx:id="confirm" graphicTextGap="5.0" mnemonicParsing="false" onAction="#Confirm"
                               text="Confirm" textFill="WHITE">
                           <font>
                               <Font name="System Bold" size="14.0"/>
                           </font>
                           <graphic>
                               <ImageView fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../../drawable/detectionDrawables/tick.png"/>
                                   </image>
                               </ImageView>
                           </graphic>
                       </Button>
                   </children>
                   <BorderPane.margin>
                       <Insets bottom="10.0" top="10.0"/>
                   </BorderPane.margin>
               </HBox>
           </center>
           <top>
               <Pane prefHeight="0.5" styleClass="separator" BorderPane.alignment="CENTER">
                   <BorderPane.margin>
                       <Insets left="20.0" right="20.0"/>
                   </BorderPane.margin>
               </Pane>
           </top>
       </BorderPane>
   </bottom>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </BorderPane.margin>
        </StackPane>
    </center>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
</BorderPane>
